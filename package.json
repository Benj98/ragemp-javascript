{
	"name": "ragemp-javascript",
	"version": "1.0.2",
	"scripts": {
		"format": "prettier --write src/**/*.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/LeonardSSH/ragemp-javascript.git"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/LeonardSSH/ragemp-javascript/issues"
	},
	"homepage": "https://github.com/LeonardSSH/ragemp-javascript#readme",
	"devDependencies": {
		"@ragempcommunity/types-client": "^2.0.2",
		"@ragempcommunity/types-server": "^2.0.2",
		"prettier": "^2.5.0"
	},
	"dependencies": {
		"bcrypt": "^5.1.0",
		"dotenv": "^16.0.0",
		"mysql": "^2.18.1",
		"mysql2": "^3.1.0",
		"rage-rpc": "^0.4.0",
		"sequelize": "^6.28.0"
	},
	"prettier": {
		"$schema": "http://json.schemastore.org/prettierrc",
		"endOfLine": "lf",
		"printWidth": 150,
		"quoteProps": "as-needed",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true,
		"overrides": [
			{
				"files": "*.yml",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	}
}
